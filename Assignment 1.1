Option Explicit
Option Base 1

Function ShiftVector(rng As Range, n As Integer)
Dim i, j, rngr As Integer
Dim A() As Variant

rngr = rng.Rows.Count
j = 1
ReDim A(rngr) As Variant

For i = 1 To rngr

  If i + n < rngr + 1 Then
    A(i) = rng(i + n)
  Else
    A(i) = rng(j)
    j = j + 1
  End If
Next i

ShiftVector = WorksheetFunction.Transpose(A)
End Function
